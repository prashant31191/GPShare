<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lytMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.rad.routetracking.gpshare.MainControl" >

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_upload_orange_selector" >
    </Button>

    <TextView
        android:id="@+id/tvUploadCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnUpload"
        android:layout_alignLeft="@+id/btnUpload" 
        android:textColor="@color/Green"
        android:textSize="22sp"
        android:textStyle="bold" />
  
</RelativeLayout>