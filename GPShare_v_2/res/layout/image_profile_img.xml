<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img1"
        android:layout_width="84dip"
        android:layout_height="84dip"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="84dip"
        android:layout_height="84dip"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@+id/img1"
        android:adjustViewBounds="true" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="84dip"
        android:layout_height="84dip"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@+id/img2" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="84dip"
        android:layout_height="84dip"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@+id/img3" />

    <CheckBox
        android:id="@+id/cb1"
        style="@style/cb_img_select"
        android:layout_alignLeft="@+id/img1"
        android:layout_alignTop="@+id/img1" />

    <CheckBox
        android:id="@+id/cb2"
        style="@style/cb_img_select"
        android:layout_alignLeft="@+id/img2"
        android:layout_alignTop="@+id/img2" >
    </CheckBox>

    <CheckBox
        android:id="@+id/cb3"
        style="@style/cb_img_select"
        android:layout_alignLeft="@+id/img3"
        android:layout_alignTop="@+id/img3" >
    </CheckBox>

    <CheckBox
        android:id="@+id/cb4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img4"
        android:layout_alignTop="@+id/img4"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:button="@drawable/cbshare"
        android:scaleX="1.75"
        android:scaleY="1.75"
        android:visibility="gone" >
    </CheckBox>

</RelativeLayout>